<!DOCTYPE html>
<html>
<head>
  <% include ../includes/header.ejs %>
</head>

<body>
  <% include ../includes/nav.ejs %>
<div class="jumbotron text-center">
  <div class="container">
    <h1><%= title %></h1>
    <p>Take a look at our wares!</p>
  </div>
</div>
<div class="container">
  <% for (i = 0; i < data.length; i++) { %>
    <% if(i % 3 == 0) { %>
        <div class="container">
      <% } %>
      <div class="card">
          <img src="<%= data[i].imageUrl %>" alt="image" class="cardImg">
          <div class="cardBody">
              <h4><b><%= data[i].name %</b></h4>
              <h6><%= data[i].price %</h6>
              <p><%= data[i].description %</p>
          </div>
          <% if(i % 3 == 2) { %>
      </div>
      <% } %>
</div>
<% } %>
</div>


</body>
</html>